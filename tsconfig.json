{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom", "esnext"],
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"]
}
